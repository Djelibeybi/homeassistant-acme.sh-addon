{
  "name": "acme.sh addon for Home Assistant",
  "version": "1.0.0",
  "slug": "acme.sh",
  "description": "Full ACME client to generate and renew TLS/SSL certificates",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "map": ["ssl:rw", "config:rw"],
  "boot": "auto",
  "options": {
    "accountemail": null,
    "domain": null,
    "dns-provider": null,
    "dns-env-vars": [null],
    "keylength": "4096",
    "fullchainfile": "fullchain.pem",
    "keyfile": "privkey.pem"
  },
  "schema": {
    "accountemail": "str",
    "domain": "str",
    "dns-provider": "str",
    "dns-env-vars": [
      {"name": "str", "value": "str"}
    ],
    "keylength": "match(2048|4096|ec-256|ec-384|ec-512)",
    "fullchainfile": "str",
    "keyfile": "str"
  }
}
