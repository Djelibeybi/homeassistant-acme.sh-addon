{
  "name": "acme.sh addon for Home Assistant",
  "version": "0.0.6",
  "slug": "acme-sh",
  "description": "Full ACME client to generate and renew TLS/SSL certificates",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "map": ["ssl:rw", "config"],
  "boot": "auto",
  "init": false,
  "options": {
    "accountemail": null,
    "domain": null,
    "dnsprovider": null,
    "dnsenvvars": [null],
    "keylength": "4096",
    "fullchainfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "debug": 0
  },
  "schema": {
    "accountemail": "str",
    "domain": "str",
    "dnsprovider": "str",
    "dnsenvvars": [
      {"name": "str", "value": "str"}
    ],
    "keylength": "match(2048|4096|ec-256|ec-384|ec-512)",
    "fullchainfile": "str",
    "keyfile": "str",
    "debug": "int(0,3)"
  }
}
